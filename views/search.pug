extends layouts/main
include mixins/videoBlock
block content
    .search__header
        h3 Searching by : #{searchingBy}
        
    .search__videos
        if videos.length === 0
            h5 No Videos Found ðŸ˜¥
        .videos
            each video in videos
                .search__video
                    +videoBlock(
                        {
                            id:video.id,
                            title:video.title,
                            views:video.views,
                            videoFile:video.videoFile
                        }
                    )
